#!/bin/sh
# Send a notification displaying that the battery is charging/discharging
# Add to /etc/udev/rules.d/60-power.rules:
# ACTION=="change", SUBSYSTEM=="power_supply", ATTR{type}=="Mains", ATTR{online}=="0", ENV{DISPLAY}=":0", ENV{XAUTHORITY}="/home/eric/.Xauthority" RUN+="/usr/bin/su eric -c /home/eric/.local/bin/battery-charging"
# ACTION=="change", SUBSYSTEM=="power_supply", ATTR{type}=="Mains", ATTR{online}=="1", ENV{DISPLAY}=":0", ENV{XAUTHORITY}="/home/eric/.Xauthority" RUN+="/usr/bin/su eric -c /home/eric/.local/bin/battery-charging"

export XAUTHORITY=~/.Xauthority
export DISPLAY=:0
export DBUS_SESSION_BUS_ADDRESS="unix:path=/run/user/1000/bus"

BATTERY_LEVEL=$(acpi -b | grep "Battery 0" | grep -P -o '[0-9]+(?=%)')
# My battery takes a couple of seconds to recognize as charging, so this is a hacky way to deal with it
ACPI_CHARGING=$(acpi | grep -v 'unavailable' | cut -d ' ' -f 3 | tr -d ',| ')
case "$ACPI_CHARGING" in
 "Discharging") BATTERY_CHARGING="Discharging" ; BATTERY_ICON="discharging" ;;
 *) BATTERY_CHARGING="Charging" ; BATTERY_ICON="charging" ;;
esac

# Send notification
notify-send "${BATTERY_CHARGING}" "${BATTERY_LEVEL}% of battery charged." -u normal -i "battery-${BATTERY_ICON}" -t 5000 -r 9991
