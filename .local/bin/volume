#!/bin/bash

# Increment, decrement, or mute the volume and send a notification
# of the current volume level.

send_notification() {
	VOLUME=$(pamixer --get-volume)

	if [ "$1" = "mute" ]; then
		ICON="volume-mute"
	elif [ "$VOLUME" -lt 33 ]; then
		ICON="volume-low"
	elif [ "$VOLUME" -lt 66 ]; then
		ICON="volume-medium"
	else
		ICON="volume-high"
	fi

	if [ "$1" = "mute" ]; then
		TEXT="Currently muted"
	else
		TEXT="Currently at ${VOLUME}%"
	fi

	dunstify -a "Volume" -u low -r 9993 -h int:value:"$VOLUME" -i $ICON "Volume" "$TEXT" -t 1000
}

case $1 in
up)
	# Set the volume on (if it was muted)
	pamixer -u
	pamixer -i 5 --allow-boost
	send_notification up
	;;
down)
	pamixer -u
	pamixer -d 5 --allow-boost
	send_notification down
	;;
mute)
	pamixer -t
	if eval "$(pamixer --get-mute)"; then
		send_notification mute
	else
		send_notification
	fi
	;;
esac
