#! /bin/sh

chosen=$(printf "Lock\nSuspend\nReboot\nShutdown\nLog Out" | tofi --config $HOME/.config/tofi/powermenu-config)

case "$chosen" in
	"Lock") lockscreen ;;
	"Suspend") systemctl suspend-then-hibernate ;;
	"Reboot") reboot ;;
	"Shutdown") poweroff ;;
	"Log Out") hyprctl dispatch exit ;;
	*) exit 1 ;;
esac
